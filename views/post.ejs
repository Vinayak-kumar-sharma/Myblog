  <div class="blog-content">
    <h1><%= post.title %></h1>
    <p class="post-meta">
      Published on <%= post.createdAt.toDateString() %> | 
      <span class="views"><%= post.views %> Views</span>
    </p>
    <a href="/" class="btn back-btn">Back to Home</a>
    <a href="/edit/<%= post._id %>/" class="btn btn-primary">Edit Post</a>
  </div>
  
  <main class="content">
    <article class="c">
      <p class="post-markdown"><%- post.sanotizedHtml %></p>
    </article>
  </main>


  <footer class="footer">
    
    <form action="/post/<%= post._id %>?_method=DELETE" method="POST" style="display:inline;">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    
  </footer>


</body>
</html>
